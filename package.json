{
  "name": "gameverse-backend-infrastructure",
  "version": "1.0.0",
  "description": "GameVerse Backend Infrastructure - Database, Testing, CI/CD, Monitoring",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --coverage",
    "test:e2e": "jest --testPathPattern=tests/e2e --coverage --runInBand",
    "test:e2e:party": "jest --testPathPattern=tests/e2e/party --coverage --runInBand",
    "test:e2e:social": "jest --testPathPattern=tests/e2e/social --coverage --runInBand",
    "test:e2e:tournament": "jest --testPathPattern=tests/e2e/tournament --coverage --runInBand",
    "test:e2e:season": "jest --testPathPattern=tests/e2e/season --coverage --runInBand",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts' 'infrastructure/**/*.ts' 'shared/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' 'infrastructure/**/*.ts' 'shared/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' 'infrastructure/**/*.ts' 'shared/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts' 'infrastructure/**/*.ts' 'shared/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "db:migrate": "ts-node infrastructure/database/migrate.ts",
    "db:migrate:up": "ts-node infrastructure/database/migrate.ts up",
    "db:migrate:down": "ts-node infrastructure/database/migrate.ts down",
    "db:migrate:status": "ts-node infrastructure/database/migrate.ts status",
    "db:seed": "ts-node infrastructure/database/seed.ts",
    "db:reset": "ts-node infrastructure/database/reset.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "keywords": [
    "gameverse",
    "gaming",
    "backend",
    "infrastructure",
    "testing",
    "e2e",
    "postgresql",
    "redis",
    "monitoring"
  ],
  "author": "GameVerse Team",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.45.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.0",
    "@opentelemetry/instrumentation-express": "^0.34.0",
    "@opentelemetry/instrumentation-http": "^0.45.0",
    "@opentelemetry/instrumentation-pg": "^0.37.0",
    "@opentelemetry/instrumentation-redis-4": "^0.35.0",
    "@opentelemetry/resources": "^1.18.0",
    "@opentelemetry/sdk-metrics": "^1.18.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/sdk-trace-base": "^1.18.0",
    "@opentelemetry/sdk-trace-node": "^1.18.0",
    "@opentelemetry/semantic-conventions": "^1.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
