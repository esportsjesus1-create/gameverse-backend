# Application
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=gameverse_social
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Gamerstake Integration
GAMERSTAKE_API_URL=https://api.gamerstake.com
GAMERSTAKE_API_KEY=your_api_key_here
GAMERSTAKE_SYNC_INTERVAL_MS=300000

# Presence Settings
PRESENCE_OFFLINE_TIMEOUT_MS=300000
PRESENCE_HEARTBEAT_INTERVAL_MS=30000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4200
